@page
@model IndexModel
@{
    ViewData["Title"] = "Hoşgeldiniz";
}

<style>
    .welcome-message {
        text-align: center;
        font-size: 64px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .instruction-message {
        text-align: center;
        font-size: 18px;
        margin-bottom: 20px;
    }

    .button-container {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

        .button-container .btn {
            margin: 0 10px;
            font-size: 16px;
            padding: 10px 20px;
            border-radius: 5px;
        }
</style>

<div class="welcome-message">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="instruction-message">
    <p>Ne yapmak istersiniz?</p>
</div>

<div class="button-container">
    <a href="/Create" class="btn btn-primary">Kişi Ekle</a>
    <a href="/Dashboard" class="btn btn-primary">Dashboard'u Kontrol Et</a>
    <a href="/PeopleList" class="btn btn-primary">Kişileri Gör</a>
</div>
