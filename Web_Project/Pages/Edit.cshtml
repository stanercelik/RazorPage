@page
@model EditModel

<h2>Edit Person</h2>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" name="id" />
    <div>
        <label asp-for="person.Name"></label>
        <input asp-for="person.Name" value="person.Name" required />
        <span asp-validation-for="person.Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="person.Surname"></label>
        <input asp-for="person.Surname" value="person.Surname" required />
        <span asp-validation-for="person.Surname" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="person.Gender"></label>
        <input asp-for="person.Gender" value="person.Gender" required />
        <span asp-validation-for="person.Gender" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="person.Birthdate"></label>
        <input asp-for="person.Birthdate" value="person.Birthdate" required />
        <span asp-validation-for="person.Birthdate" class="text-danger"></span>
    </div>
    <div>
        <input type="file" name="photo" accept="image/*" />
    </div>
    <button type="submit">Save</button>
</form>


<style>
    h2 {
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
    }

    form {
        max-width: 400px;
        margin: 0 auto;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="date"] {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-bottom: 10px;
    }

    .text-danger {
        color: red;
    }

    button[type="submit"] {
        display: block;
        width: 100%;
        padding: 10px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 10px
    }

        button[type="submit"]:hover {
            background-color: #45a049;
        }
</style>